factorial(n: Num): Num =
	if (n = 0)
		1
	else
		n * factorial(n - 1)

letExample(n: Num) =
{
	let positive: Bool = n > 0
	let prime: Bool = prime(n)
	let even: Bool = n % 2 == 0
	positive & prime & even
}

apply(f: Function<Num, Bool>, a: Num, b: Num): Bool = f(a + b)

duplicate(n: Num): Num = n * 2

even(n: Num): Bool = (n % 2) == 0

odd(n: Num): Bool = (n % 2) != 0

